@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewData["Title"] = "Excluir";
}

<section class="bloco manage">

    <div class="row container">

        <div class="col s12 center">
            <h2 class="titulo light white-text">@ViewData["Title"]</h2>
        </div>

        <div class="col l3"></div>

        <div class="col s12 m12 l6 card-panel">

            <h5>Tem certeza que deseja Excluir?</h5>
            <p>Excluir esta Role irá remover todos os usuários pertencentes à ela</p>

            <table class="responsive-table highlight">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Html.DisplayFor(model => model.Name)</td>
                    </tr>
                </tbody>
            </table>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="input-field col s12">
                    <button type="submit" class="btn blue-logo right">Excluir<i class="material-icons right">send</i></button>
                </div>
            }

            <p>
                @Html.ActionLink("Voltar à lista", "Index")
            </p>
        </div>
    </div>
</section>