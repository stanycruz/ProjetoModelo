@model ProjetoModelo.WebUI.Models.RoleViewModel
@{
    ViewData["Title"] = "Criar";
}

<section class="bloco manage">

    <div class="row container">

        <div class="col s12 center">
            <h2 class="titulo light white-text">@ViewData["Title"]</h2>
        </div>

        <div class="col l3"></div>

        <div class="col s12 m12 l6 card-panel">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
                <div class="input-field col s12">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @autocomplete = "off" } })
                    @Html.LabelFor(model => model.Name)
                </div>

                <p class="col s12">
                    <button class="btn blue-logo right" type="submit">
                        Criar
                        <i class="material-icons right">send</i>
                    </button>
                </p>
            }

            <p>
                @Html.ActionLink("Voltar à lista", "Index")
            </p>

        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
