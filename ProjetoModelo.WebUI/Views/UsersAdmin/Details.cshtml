@model ProjetoModelo.WebUI.Models.ApplicationUser

@{
    ViewData["Title"] = "Detalhes";
}

<section class="bloco manage">

    <div class="row container">

        <div class="col s12 center">
            <h2 class="titulo light white-text">@ViewData["Title"]</h2>
        </div>

        <div class="col l3"></div>

        <div class="col s12 m12 l6 card-panel">
            <h5>Usuário</h5>
            <table class="responsive-table highlight">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.UserName)</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Html.DisplayFor(model => model.UserName)</td>
                    </tr>
                </tbody>
            </table>

            <h5>Lista de Roles para este usuário</h5>
            @if (ViewBag.RoleNames.Count == 0)
            {
                <p>Usuário não pertence a nenhuma Role.</p>
            }
            else
            {
                <table class="responsive-table highlight">
                    @foreach (var item in ViewBag.RoleNames)
                    {
                        <tr>
                            <td>
                                @item
                            </td>
                        </tr>
                    }
                </table>
            }

            <h5>Lista de Claims para este usuário</h5>

            @if (ViewBag.Claims.Count == 0)
            {
                <p>Usuário não possui nenhum Claim</p>
            }
            else
            {
                <table class="responsive-table highlight">
                    <thead>
                        <tr>
                            <th>
                                Nome da Claim
                            </th>
                            <th>
                                Valor da Claim
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.Claims)
                        {
                            <tr>
                                <td>
                                    @item.Type
                                </td>
                                <td>
                                    @item.Value
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }

            <p>
                @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) |
                @Html.ActionLink("Voltar à lista", "Index")
            </p>

        </div>
    </div>
</section> 