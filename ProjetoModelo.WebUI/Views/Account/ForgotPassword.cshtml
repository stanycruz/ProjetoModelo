@model ProjetoModelo.WebUI.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Esqueceu sua senha?";
}

<section class="bloco formularios">

    <div class="row container">

        <div class="col s12 center">
            <h2 class="titulo light white-text">@ViewData["Title"]</h2>
        </div>

        <div class="col l3"></div>

        <div class="col s12 m12 l6 card-panel">

            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()

                <div class="input-field col s12">
                    @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @autocomplete = "off" } })
                    @Html.LabelFor(m => m.Email)
                </div>

                <p class="col s12">
                    <button class="btn blue-logo right" type="submit">
                        Enviar
                        <i class="material-icons right">send</i>
                    </button>
                </p>
            }
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
