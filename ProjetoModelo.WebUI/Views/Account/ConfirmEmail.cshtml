@{
    ViewData["Title"] = "Confirmar E-mail";
}

<section class="bloco manage">
    <div class="row container">

        <div class="col s12 center">
            <h2 class="titulo light white-text">@ViewData["Title"]</h2>
        </div>

        <div class="col l3"></div>

        <div class="col s12 m12 l6 card-panel">
            <div class="col s12 center">
                <p>
                    Obrigado por confirmar seu e-mail.
                </p>
                <p>
                    Por favor @Html.ActionLink("Clique aqui para Login", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                </p>
            </div>
        </div>

    </div>
</section>