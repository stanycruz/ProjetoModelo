@model ProjetoModelo.WebUI.Models.SendCodeViewModel
@{
    ViewData["Title"] = "Enviar código de verificação";
}

<section class="bloco manage">

    <div class="row container">

        <div class="col s12 center">
            <h2 class="titulo light white-text">@ViewData["Title"]</h2>
        </div>

        <div class="col l3"></div>

        <div class="col s12 m12 l6 card-panel">

            @using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="input-field col s12">
                    @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
                    @Html.Label("Autenticação em dois fatores")
                </div>
                @Html.HiddenFor(m => m.UserId)
                <p class="col s12">
                    <button class="btn blue-logo right" type="submit">
                        Enviar
                        <i class="material-icons right">send</i>
                    </button>
                </p>
            }

        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}