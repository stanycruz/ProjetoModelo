@model ProjetoModelo.WebUI.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Resetar Senha";
}

<section class="bloco formularios">

    <div class="row container">

        <div class="col s12 center">
            <h2 class="titulo light white-text">@ViewData["Title"]</h2>
        </div>

        <div class="col s12 card-panel">

            @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Crie uma nova senha.</h4>

                @Html.ValidationSummary()
                @Html.HiddenFor(model => model.Code)

                <div class="input-field col s12 m6 l6">
                    @Html.EditorFor(m => m.Email)
                    @Html.LabelFor(m => m.Email)
                </div>

                <div class="input-field col s12 m6 l6">
                    @Html.PasswordFor(m => m.Password)
                    @Html.LabelFor(m => m.Password)
                </div>

                <div class="input-field col s12 m6 l6">
                    @Html.PasswordFor(m => m.ConfirmPassword)
                    @Html.LabelFor(m => m.ConfirmPassword)
                </div>

                <p class="col s12">
                    <button class="btn blue-logo right" type="submit">
                        Enviar
                        <i class="material-icons right">send</i>
                    </button>
                </p>
            }

        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
