@model ProjetoModelo.WebUI.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Trocar senha";
}

<section class="bloco formularios">

    <div class="row container">

        <div class="col s12 center">
            <h2 class="titulo light white-text">@ViewData["Title"]</h2>
        </div>

        <div class="col l3"></div>

        <div class="col s12 m12 l6 card-panel">

            @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
                <div class="input-field col s12">
                    @Html.PasswordFor(model => model.OldPassword)
                    @Html.LabelFor(model => model.OldPassword)
                </div>

                <div class="input-field col s12">
                    @Html.PasswordFor(model => model.NewPassword)
                    @Html.LabelFor(model => model.NewPassword)
                </div>

                <div class="input-field col s12">
                    @Html.PasswordFor(model => model.ConfirmPassword)
                    @Html.LabelFor(model => model.ConfirmPassword)
                </div>

                <p class="col s12">
                    <button class="btn blue-logo right" type="submit">
                        Trocar senha
                        <i class="material-icons right">send</i>
                    </button>
                </p>
            }

        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}