@model ProjetoModelo.WebUI.Models.SetPasswordViewModel


<section class="bloco formularios">

    <div class="row container">

        <div class="col s12 card-panel">

            <p>
                Você não tem um nome de usuário / senha local para este site.
                Adicione uma senha para a conta local para que você possa entrar sem um login externo.
            </p>

            @using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()


                <h4>Crie uma senha</h4>
                <hr />
                @Html.ValidationSummary()
                <div class="input-field col s12 m6 l6">
                    @Html.EditorFor(model => model.NewPassword)
                    @Html.LabelFor(model => model.NewPassword)
                </div>

                <div class="input-field col s12 m6 l6">
                    @Html.EditorFor(model => model.ConfirmPassword)
                    @Html.LabelFor(model => model.ConfirmPassword)
                </div>

                <p class="col s12">
                    <button class="btn blue-logo right" type="submit">
                        Criar senha
                        <i class="material-icons right">send</i>
                    </button>
                </p>
            }

        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}